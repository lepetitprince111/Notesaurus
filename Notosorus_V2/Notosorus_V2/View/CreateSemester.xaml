<Window x:Class="Notosorus_V2.View.CreateSemester"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Notosorus_V2"
    mc:Ignorable="d"
    Title="CreateSemester" Height="273" Width="323">
    <Grid Background="#FFFFDD59">
        <Rectangle Margin="10,10,14,10" Fill="White" RadiusX="20" RadiusY="20" Stroke="Black"/>
        <Label Content="New semester" Margin="20,33,0,0" FontSize="36" FontFamily="Broadway" Height="51" VerticalAlignment="Top" HorizontalAlignment="Left" Width="274"/>
        <Label Content="Name:" FontSize="20" FontFamily="Broadway" Margin="121,100,0,0" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left" Width="81"/>
        <TextBox x:Name="txtNameSemester" HorizontalAlignment="Center" Margin="0,141,0,0" TextWrapping="Wrap" Width="183" Height="23" VerticalAlignment="Top"/>
        <Button Content="Save" Margin="0,195,0,0" FontSize="16" FontFamily="Broadway" BorderBrush="#FF707070" Background="{x:Null}" HorizontalAlignment="Center" Width="81" Height="25" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="btnBack" Content="-" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="24" FontFamily="Broadway" FontSize="20" BorderBrush="{x:Null}" Background="{x:Null}" Click="btnBack_Click"/>

    </Grid>
</Window>
