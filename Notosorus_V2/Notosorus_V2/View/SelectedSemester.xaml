<Window x:Class="Notosorus_V2.View.SelectedSemester"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Notosorus_V2"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="749">
    <Grid Background="#FFFFDD59">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Left" Height="339" Stroke="Black" VerticalAlignment="Center" Width="500" RadiusX="20" RadiusY="20" Fill="White" Margin="24,0,0,0"/>
        <Label Content="Select your class" HorizontalAlignment="Left" Margin="170,13,0,0" FontSize="22" FontFamily="Broadway" Height="35" VerticalAlignment="Top" Width="208"/>
        <Button x:Name="BtnAddClasse" Content="+" Margin="478,48,0,0" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="36" FontWeight="Bold" FontFamily="Rockwell Extra Bold" Height="47" VerticalAlignment="Top" HorizontalAlignment="Left" Width="46" Click="BtnAddClasse_Click"/>
        <ListBox x:Name="ListClasses" DisplayMemberPath="Name" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="68,100,271,76" BorderBrush="{x:Null}" FontSize="20" FontFamily="Broadway" />
        <Rectangle HorizontalAlignment="Left" Height="339" Margin="550,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="174" Fill="White" RadiusX="20" RadiusY="20"/>

    </Grid>
</Window>
